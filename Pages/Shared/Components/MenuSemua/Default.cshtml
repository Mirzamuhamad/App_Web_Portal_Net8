@model List<SemuaMenuItem>

@{
    var grouped = Model
    .GroupBy(x => x.Category)
    .ToList();
}

@* /* Grid 2 kolom untuk kategori */ *@
<div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
    @foreach (var group in grouped)
    {
        <div class="p-2 rounded-xl border bg-white shadow-sm">

            <!-- Header Kategori -->
            <h2 class="text-sm font-semibold text-gray-800 mb-3 px-2 bg-gray-50 rounded-lg py-1">
                @group.Key
            </h2>

            <!-- Item 4 kolom -->
            <ul class="grid grid-cols-4 gap-2 text-gray-700 text-center px-1">
                @foreach (var item in group)
                {
                    <a href="@item.Url" class="flex flex-col items-center space-y-2 cursor-pointer
                                 transform hover:scale-110 transition duration-200">
                        <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center shadow-sm">
                            <img src="@item.IconPath" class="w-6 h-6" />
                        </div>
                        <span class="text-xs font-medium">@item.Title</span>
                    </a>

                }
            </ul>

        </div>
    }
</div>